<link rel="stylesheet" href="/stylesheets/mdb-links.css">
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.2.0/mdb.min.js" defer></script>
<link rel="stylesheet" href="/stylesheets/place-order.css">

<div class="row gradient-custom " style=" margin-right: 3px; font-family:Arial, Helvetica, sans-serif;">
  <div class="col-md-3">
    <div style="margin-top: 15rem; margin-left: 10px;" class="text-center">
      <i id="animationDemo" data-mdb-animation="slide-right" data-mdb-toggle="animation" data-mdb-animation-reset="true"
        data-mdb-animation-start="onScroll" data-mdb-animation-on-scroll="repeat"
        class="fas fa-6x fa-shipping-fast text-white"></i>
      <h3 class="mt-3 text-white">Welcome</h3>
      <p class="text-white">You are 30 seconds away from completing your order!</p>
    </div>
    <div class="text-center">
      <a href="/cart" class="btn btn-white btn-rounded back-button">Go back</a>
    </div>


  </div>
  <div class="col-md-9 justify-content-center mb-3 mt-3">
    <div class="card card-custom pb-4">
      <div class="card-body mt-0 mx-5 ">
        <div class="text-center mb-3 pb-2 mt-3" style="font-family: 'Courier New', Courier, monospace;">
          <h3 class="h8">Delivery Details</h3>
        </div>

        <form class="mb-0" action="/place-order" method="post" id="checkout-form"
          style="font-family: 'Courier New', Courier, monospace;">

          <div class="row mb-4 ">
            <div class="col">
              <div class="form-outline">
                <input type="text" id="form9Example1" name="name" class="form-control input-custom" />
                <label class="form-label" for="form9Example1">Name</label>
              </div>
            </div>
            <div class="col">
              <div class="form-outline">
                <input type="number" id="form9Example2" name="mobile" min="10" class="form-control input-custom" />
                <label class="form-label" for="form9Example2">Mobile Number</label>
              </div>
            </div>
          </div>
          <div class="row mb-4">
            <div class="col">
              <div class="form-outline">
                <input type="text" id="form9Example3" name="city" class="form-control input-custom" />
                <label class="form-label" for="form9Example3">City</label>
              </div>
            </div>
            <div class="col">
              <div class="form-outline">
                <input type="text" id="form9Example4" name="pincode" class="form-control input-custom" />
                <label class="form-label" for="form9Example4">Zip</label>
              </div>
            </div>
          </div>
          <div class="row mb-4">
            <div class="col">
              <div class="form-outline">
                <input type="text" id="form9Example6" name="address" class="form-control input-custom" />
                <label class="form-label" for="form9Example6">Address</label>
              </div>
            </div>
            <div class="col">
              <div class="form-outline">
                <input type="email" id="typeEmail" name="email" class="form-control input-custom" />
                <label class="form-label" for="typeEmail">Email</label>
              </div>
            </div>
          </div>
          <hr style="color: aqua;">
          {{!-- Payment Method --}}
          <div class="d-flex flex-column my-3 text-center">
            <h3 class="h8">Payment Method</h3>
          </div>
          <hr style="color: aqua;">
          <div class="col-12 mb-4">
            <div class="row box-right">
              <div class="col-md-8 ps-0 ">
                <p class="ps-3 textmuted fw-bold h6 mb-0">Total Amount</p>
                <p class="h1 fw-bold d-flex"> <span
                    class=" textmuted pe-1 h6 align-text-top mt-1">&#x20b9;</span>{{total}}
                </p>
                <p class="ms-3 px-2 bg-green">+10% since last month</p>
              </div>
              <div class="col-md-4">
                <div class="payment mb-2">
                  <div class="btn btn-primary">
                    <div>
                      <span class="fas fa-hand-holding-dollar pay"> </span>
                      <span class="ps-3"><input class="form-check-input" type="radio" name="payment-method"
                           value="COD" aria-label="..." checked></span><span 
                        style="font-weight: bold; font-size: 10px;"> Cash On Delivery
                      </span>

                    </div>
                    <span class="fas fa-arrow-right"></span>
                  </div>
                </div>
                <div class="payment mb-2">
                  <div class="btn btn-primary">
                    <div>
                      <span class="fas fa-university pay"></span>
                      <span class="ps-3 fw-bold"><input class="form-check-input" type="radio" name="payment-method"
                           value="ONLINE_PAYMENT" aria-label="..."></span><span
                        style="font-weight: bold; font-size: 10px;"> Online Payment
                      </span>
                    </div>
                    <span class="fas fa-arrow-right"></span>
                  </div>
                </div>
              </div>

            </div>
          </div>
          {{!--
          <hr style="color: aqua;"> --}}
          <div class="float-end ">

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-rounded"
              style="background-color: #0062CC ; height: 40px;">Place
              order</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>