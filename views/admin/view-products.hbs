<section class="mb-3" style="font-family: 'Courier New', Courier, monospace; font-weight: bold;">
    <!-- A container div using bootstrap classes -->
    <div class="container">
        <!-- A row div which contains the add button for products. -->
        <div class="row mt-3">
            <a href="/admin/add-product" class="btn btn-primary mb-3 ">A d d P r o d u c t s</a>
        </div>

        <!-- A Table to Display Products details -->
        <table class="table mt-5" id="productsTable">
            <thead> <!-- Table headers -->
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">T i t l e</th>
                    <th scope="col">B r a n d</th>
                    <th scope="col">D e s c r i p t i o n</th>
                    <th scope="col">P r i c e</th>
                    <th scope="col">I m a g e</th>
                    <th scope="col">O p t i o n s</th>


                </tr>
            </thead>
            <tbody> <!-- Table Body for added products and their information -->
                {{#each products}} <!-- Helper that loops through every product-->
                <tr> <!-- Product row to display information -->
                    <th scope="row">{{@index}}</th> <!-- Index of each displayed product. -->
                    <td>{{this.Product_Name}}</td> <!-- Product Name column. -->
                    <td>{{this.Product_Brand}} </td><!-- Product Category column. -->
                    <td>{{this.Product_Description}}</td> <!-- Product Description column. -->
                    <td>{{this.Product_Price}}</td> <!-- Product Price column. -->
                    <td><img style="width: 50px; height: 50px;" src="/product-images/{{this._id}}.jpg"
                            alt="{{this.Product_Name}}"></td>

                    <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-danger " data-bs-toggle="modal"
                            data-bs-target="#staticBackdrop"><i class="bi bi-trash"></i>
                            Delete
                        </button>
                    </td>
                    <!-- Modal -->
                    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false"
                        tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                        <div class="modal-dialog ">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <!-- Title of the modal -->
                                    <h1 class="modal-title fs-5" id="staticBackdropLabel"
                                        style="font-weight: bold; font-family: 'Courier New', Courier, monospace;">Are
                                        you sure you want to delete this Product?</h1>
                                    <!-- Button to close the modal -->
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <!-- Product image and name -->
                                    <img style="width: 50px; height: 50px;" src="/product-images/{{this._id}}.jpg"
                                        alt="{{this.Product_Name}}">
                                    <h5 style="font-family: 'Courier New', Courier, monospace; display:inline;">
                                        <span style="color: rgb(0, 156, 140);">Name : {{this.Product_Name}}</span> |
                                        <span style="color: rgb(0, 156, 140);">Brand : {{this.Product_Brand}}</span>
                                    </h5>
                                </div>
                                <div class="modal-footer">
                                    <!-- Button to cancel deletion of the product -->
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><i
                                            class="bi bi-x-circle"></i></button>
                                    <!-- Button to confirm deletion of the product -->
                                    <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"><i
                                            class="bi bi-trash-fill"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>
<!--product Table -->
<script>
    $(document).ready(function () {
        $('#productsTable').DataTable();
    });
</script>